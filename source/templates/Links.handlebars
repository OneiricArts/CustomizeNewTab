<!-- Links -->


<div class="card">
{{#if links.customSites}}

<div class="card-header">Custom Links
	<button id="NFL-button" class="btn btn-sm float-xs-right btn-outline-secondary" 
	data-toggle="modal" data-target="#addCustomLinkModal"
	type="button">Add Link</button>
</div>

<div id="custom-sites" class="list-group list-group-flush">
	{{#each links.customSites}}
		<a href="{{url}}" id="{{@index}}_customLink"
		class="list-group-item list-group-item-action">{{title}}
				<button id="remove_customLink"
					class="btn btn-sm float-xs-right btn-outline-secondary">
					<!--<span class="glyphicon glyphicon-trash"></span> -->
					&#9587;
				</button>
			</a>
	{{/each}}
</div>
{{/if}}

<div class="card-header">Chrome Top Sites</div>

<div id="top-sites" class="list-group list-group-flush">
	{{#each links.topSites}}
		<a href="{{url}}"
		class="list-group-item list-group-item-action">{{title}}</a>
	{{/each}}
</div>

</div>

