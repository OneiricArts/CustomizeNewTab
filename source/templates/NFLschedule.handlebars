
<div id="NFL-panel" class="panel panel-default">

	<div class="panel-heading">
		<span> NFL // Week {{schedule.w}} </span>

		<button id="refresh_scores" class="btn btn-xs btn-default pull-right">
			<span class="glyphicon glyphicon-refresh"></span> 
			Refresh
		</button>

		<button id="reset_games" class="btn btn-xs btn-default pull-right">
			<span class="glyphicon glyphicon-cloud-download"></span> 
			Reset
		</button>
	</div>

	<div class="panel-body">
		<div class="table-responsive">
			<table id="NFL-schedule-table" class="table table-striped table-condensed">
				<thead>
					<tr>
						<th><span class="glyphicon glyphicon-time"></span></th>
						<th style="text-align:left">Visitor</th>
						<th style="text-align:left">@Home</th>
						<th style="text-align:left">V</th>
						<th style="text-align:left">H</th>
						<th style="text-align:right">
						<span class="glyphicon glyphicon-edit"></span></th>
					</tr>
				</thead>
				<tbody id="NFL-schedule-games">
					{{#each schedule.gms}}{{#unless hidden}}

						<tr id={{eid}} data-toggle="collapse" data-target=#collapse-{{eid}}
						class="{{#if extrainfo.redzone}}danger{{/if}} {{#if fav_team}}success{{/if}}">

							{{#if extrainfo.qtr}}
								{{#if playing}}
									<td> {{extrainfo.qtr}}Q, {{extrainfo.clock}}</td>
								{{else}}
									<td class="text-capitalize"> {{extrainfo.qtr}}</td>
								{{/if}}
							{{else}}
								<td> {{d}}, {{t}}</td>
							{{/if}}

							<td class="text-capitalize {{#if visitor_winning}} winning {{/if}}"
								style="text-align:left">
								{{vnn}} {{#if visitor_pos}} &#127944;{{/if}}
							</td>
							<td class="text-capitalize {{#if home_winning}} winning {{/if}}"
								style="text-align:left">
								{{hnn}} {{#if home_pos}} &#127944;{{/if}}
							</td>
 
							<td style="text-align:left">{{extrainfo.away.score.T}}</td>
							<td style="text-align:left">{{extrainfo.home.score.T}}</td>

							<td style="text-align:right">
							<button type="button" id="remove-game-btn" class="btn btn-default btn-xs">
							<span class="glyphicon glyphicon-trash"></span></button></td>
						</tr>

						<tr id=c{{eid}}><td colspan="6" style="padding: 0" class="nfl-collapse">
							<div id=collapse-{{eid}} class="collapse">
								<small>
									{{#unless extrainfo}}
										API doesn`t update until Tuesday Midnight.
									{{/unless}}

									{{#if extrainfo.media.tv}}
										<p> Game on {{extrainfo.media.tv}} </p>
									{{/if}}

									{{#if playing}}
										<p>
										{{extrainfo.posteam}} ball on the {{extrainfo.yl}} | 
										{{extrainfo.down}} & {{extrainfo.togo}} 
										</p>
									{{/if}}

									{{#if scoreTable}}
										<table class="table table-condensed">
											<thead>
												<tr>
													<th class="text-left col-md-4"></th>
													<th class="text-right col-md-1">1</th>
													<th class="text-right col-md-1">2</th>
													<th class="text-right col-md-1">3</th>
													<th class="text-right col-md-1">4</th>
													<th class="text-right col-md-1">OT</th>
													<th class="text-right col-md-1">T</th>
												</tr>
											</thead>
											<tbody>
												<tr>
													<td class="text-left col-md-4">{{vnn}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[1]}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[2]}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[3]}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[4]}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[5]}}</td>
													<td class="text-right col-md-1">{{extrainfo.away.score.[T]}}</td>
												</tr>
												<tr>
													<td class="text-left col-md-4">{{hnn}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[1]}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[2]}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[3]}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[4]}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[5]}}</td>
													<td class="text-right col-md-1">{{extrainfo.home.score.[T]}}</td>
												</tr>
											</tbody>
										</table>
									{{/if}}
								</small>
							</div>
						</td></tr>
					{{/unless}}{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>
			